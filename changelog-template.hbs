{{#each releases}}
  #
  {{title}}
  [{{isoDate}}]

  {{! lit commits with feature: in message, use feature: or Feature: }}
  {{#commit-list
    commits
    heading='### Features'
    message='(enh: )|(ENH: )|(Enh: )'
    exclude='(chg: )|(CHG: )|(Chg: )|(Fix: )|(fix: )|(FIX: )'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! use fix: or Fix: }}
  {{#commit-list
    commits
    heading='### Change'
    message='(chg: )|(CHG: )|(Chg: )'
    exclude='(Fix: )|(fix: )|(FIX: )|(enh: )|(ENH: )|(Enh: )'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! user break: or Break: }}
  {{#commit-list
    commits
    heading='### Fix'
    message='(Fix: )|(fix: )|(FIX: )'
    exclude='(chg: )|(CHG: )|(Chg: )|(enh: )|(ENH: )|(Enh: )'
  }}
    *
    {{subject}}
    ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

{{/each}}